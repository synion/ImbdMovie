<%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
  </div>
<div class="form-inputs">
  <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :title) %>
</div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
